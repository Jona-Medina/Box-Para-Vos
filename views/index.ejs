          <div class="scroll-imagenes">
            <img src="/img/promociones.jpg" alt="promociones-img" class="promociones-img">
          </div>
        </div>
  
      </div>
  
      <!--SECCIÓN DE PRODUCTOS DESTACADOS-->
      <section class="featured-section">
  
        <h3 class="section-products-title">Productos destacados</h3>
  
        <div class="featured-products-box">
  
          <a href="/product-detail">
            <button class="product-button-link">
              <article class="featured-product">
                <div class="featured-product-img-div">
