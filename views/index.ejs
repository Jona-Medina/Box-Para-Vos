<!DOCTYPE html>
<html>
  <head>
     <%- include('./partials/head') %>
  </head>
  <body>
     <%- include('./partials/header') %>

    <!--IMAGEN DE FONDO HOME-->
    <div class="background-image-box">
  
      <div id="background-image-icon">
        <i class="fas fa-gift"></i>
      </div>
  
      <div id="background-image-text">
        <div id="background-image-title">
          <h6>Sorpresa segura</h6>
        </div>
        <div id="background-image-p">
          <p>Regalemos emociones</p>
        </div>
      </div>
  
      <div class="background-image">
        <img class="w100" src="/img/background-image.jpg" alt="Background-image">
      </div>
    </div>
  
  
    <!--MAIN-->
    <main>
      <!--SECCIÓN DE CATEGORÍAS DESTACADAS-->
      <section class="featured-section">
  
        <h3 class="section-categorys-title">Categorías destacadas</h3>
  
        <div class="featured-categorys-box">
  
          <article class="featured-category" id="sports-not-mobile">
            <div class="featured-category-img-div">
              <img src="/img/sport.jpg" alt="sports-image" class="featured-category-img">
            </div>
            <div class="category-title">
              <h4 class="category-title-h4">Deporte</h4>
            </div>
          </article>
  
          <article class="featured-category" id="movies-not-mobile">
            <div class="featured-category-img-div">
              <img src="/img/movies.jpg" alt="movies-image" class="featured-category-img">
            </div>
            <div class="category-title">
              <h4 class="category-title-h4">Películas</h4>
            </div>
          </article>
  
          <article class="featured-category">
            <div class="featured-category-img-div">
              <img src="/img/music.jpg" alt="music-image" class="featured-category-img">
            </div>
            <div class="category-title">
              <h4 class="category-title-h4">Música</h4>
            </div>
          </article>
  
          <article class="featured-category">
            <div class="featured-category-img-div">
              <img src="/img/tech.jpg" alt="tech-image" class="featured-category-img">
            </div>
            <div class="category-title">
              <h4 class="category-title-h4">Tecnología</h4>
            </div>
          </article>
  
          <article class="featured-category">
            <div class="featured-category-img-div">
              <img src="/img/games.jpg" alt="games-image" class="featured-category-img">
            </div>
            <div class="category-title">
              <h4 class="category-title-h4">Juegos</h4>
            </div>
          </article>
  
          <article class="featured-category" id="food-not-mobile">
            <div class="featured-category-img-div">
              <img src="/img/food.jpg" alt="food-image" class="featured-category-img">
            </div>
            <div class="category-title">
              <h4 class="category-title-h4">Comida</h4>
            </div>
          </article>
  
        </div>
  
      </section>
  
      <!--SECCIÓN DE OFERTAS-->
      <section class="featured-section">
  
        <h3 class="section-offers-title">Ofertas</h3>
  
        <div class="featured-offers-box">
  
          <article class="featured-offer">
            <div class="offer-img-div">
              <img src="/img/box-product.jpg" alt="SanValentin-image" class="featured-category-img">
            </div>
            <div class="offer-title">
              <h4 class="offer-title-h4">Caja San Valentín</h4>
              <p class="off">5%</p>
            </div>
          </article>
  
          <article class="featured-offer" id="not-tablet-featured-offer">
