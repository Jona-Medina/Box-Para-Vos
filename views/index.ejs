            </div>
          </article>
  
          <article class="featured-offer" id="not-mobile-tablet-featured-offer">
            <div class="offer-img-div">
              <img src="/img/box-product.jpg" alt="Sweets-image" class="featured-category-img">
            </div>
            <div class="offer-title">
              <h4 class="offer-title-h4">Caja Sweets</h4>
              <p class="off">4%</p>
            </div>
          </article>
  
          <article class="featured-offer" id="not-mobile-tablet-featured-offer">
            <div class="offer-img-div">
              <img src="/img/box-product.jpg" alt="Viajes-image" class="featured-category-img">
            </div>
            <div class="offer-title">
              <h4 class="offer-title-h4">Caja Viajes</h4>
              <p class="off">5%</p>
            </div>
          </article>
        </div>
  
      </section>
  
      <!--SECCIÓN ESPACIO PARA EL ANUNCIO-->
